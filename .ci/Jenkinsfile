pipeline {
    agent any
    options {
        ansiColor('xterm')
        buildDiscarder(logRotator(numToKeepStr: '5', artifactNumToKeepStr: '5'))
    }

    stages {

        stage('START') {
            steps {
                echo "START"
            }
        }

        stage('check') {
            when {
                allOf {
                    expression { env.STACKABLE_OPERATOR != null }
                }
            }
            steps {
                echo "Testing the operator: ${env.STACKABLE_OPERATOR}"
            }
        }

        stage('STOP') {
            steps {
                echo "STOP"
            }
        }

    }
}


